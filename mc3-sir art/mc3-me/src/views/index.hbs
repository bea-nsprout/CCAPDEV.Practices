<link rel="stylesheet" href="static/css/index.css" />
<script src="static/js/debtForm.js" defer> </script>
<div id="contentContainer">
    <h1> Debt Tracker </h1>
    <!-- Add Debt Form  -->
    <div id="addDebtContainer">
        <form id="debtForm" name="debtForm">
            <input id="accountName" name="accountName" type="text" placeholder="Account Name" />
            <input id="debtAmount" name="debtAmount" type="number" placeholder="Debt Amount" />
            <p class="error" id="form_error"></p>
            <input class="submitBtn" id="submitBtn" type="submit" value="Add Debt"/>
        </form>
    </div>
    <hr>
    <div id="debtList">
        {{#if accounts.length}}
            {{#each accounts}}
                {{>debtItem}}
            {{/each}}
        {{else}}
            <p> No debts to display</p>
        {{/if}}

    </div>
</div>
